<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <a href="/books/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center">Title</th>
                  <th class="text-center">Description</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center col-1"></th>
                  <th class="text-center col-1"></th>
                 
                </tr>
                </thead>
                <tbody>
                <!-- Repeatable Template Row -->
                <% for (let count = 0; count < BookList.length; count++) { %>
                <tr>
                  <td class="text-center"><%= BookList[count].title %></td>
                  <td class="text-center"><%= BookList[count].description %></td>
                  <td class="text-center">$<%= BookList[count].price %></td>
                  <td class="text-center"><%= BookList[count].author %></td>
                  <td class="text-center"><%= BookList[count].genre %></td>

                  <td class="text-center col-1">
                    <!-- ------------------------ -->
                    <!-- ADD the EDIT BUTTON HERE -->
                    <a href="/books/edit/<%= BookList[count]._id %>" class="btn btn-primary">
                    <i class="class fas-fa-pencil alt"></i>Edit</a>

                    <!-- ------------------------ -->
                  </td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- ADD the DELETE BUTTON HERE -->
                    <a href="/books/delete/<%= BookList[count]._id %>" class="btn btn-danger">
                      <i class="class fas-fa-trash alt"></i>Delete</a>
                    <!-- ------------------------ -->
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


